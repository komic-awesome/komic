$baseFontFamily ?= "Helvetica Neue", Helvetica, Arial, sans-serif

label
select
  font-size: 14px
  font-family: inherit
  line-height: 15px

select
  font-family: $baseFontFamily

textarea
  height: auto

.control-label
.form-control
  box-sizing: border-box

.form-group
  margin-bottom: 15px

select
  height: 28px
  line-height: @height
  border: 1px solid #ccc

.form-horizontal
  .control-label
    display: inline-block
    padding-top: 7px
    text-align: right
    float: left
  .form-control
    display: block
    width: 100%
    height: 30px
    padding: 6px 12px
    font-size: 14px
    line-height: 1.42
    color: #555
    border: 1px solid #ccc
  .help-block
    font-size: 12px
    color: #666
