.thumbview
  background: #f1f4f9
  overflow-x: hidden
  overflow-y: auto
  top: 0
  left: 0
  margin: 0
  border: 0
  min-width: 960px
  .list
    padding: 50px 80px
    list-style: none
    font-size: 0
    display: flex
    justify-content: space-between
    flex-wrap: wrap
    .item
      display: inline-block
      list-style: none
      font-size: 0
      border-radius: 5px
      margin: 10px 5px
      box-shadow(0 2px 5px 0 rgba(0,0,0,0.26))
      &:hover
        transform: scale(1.05)
        transition: all 0.2s ease-in-out
      .thumb
        display: inline-block
        border-radius: 5px
    .current
      border: solid 1px olive 

